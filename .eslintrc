{
  "extends": "vtex",
  "root": true,
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks"
  ],
  "overrides": [
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "parser": "@babel/eslint-parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
          "presets": [
            "@babel/preset-react"
          ]
        },
        "ecmaFeatures": {
          "jsx": true
        }
      }
    }
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-console": "warn",
    "prettier/prettier": "off"
  }
}